<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/porcelain">

    <RelativeLayout
        android:id="@+id/relativelayout_dashboard_firstpart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_dashboard_firstpart"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">

        <Spinner
            android:id="@+id/spinner_dashboard_spinner"
            style="@style/SpinnerThemeDashboard"
            android:layout_width="@dimen/width_dashboard_spinner"
            android:layout_height="@dimen/height_dashboard_spinner"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margintop_dashboard_spinner"
            android:spinnerMode="dropdown"
            android:textAlignment="center"/>

        <RelativeLayout
            android:id="@+id/relativelayout_dashboard_alphasymbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_dashboard_spinner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margintop_dashboard_linearlayoutalphasymbol"
            android:gravity="center">


            <TextView
                android:id="@+id/textview_dashboard_balance"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_dashboard_amountalpha"
                android:layout_centerHorizontal="true"
                android:text="VALUE"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_dashboard_amountalpha"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearlayout_dashboard_middletextviews"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutheight_dashboard_linearlayoutmiddletextview"
        android:layout_below="@+id/relativelayout_dashboard_firstpart"
        android:background="@color/colorSecondary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_dashboard_equivalenttobasecurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/marginstart_dashboard_equivalenttobasecurrency"
            android:text="@string/dasboard_equivalenttobasecurrency"
            android:paddingBottom="4dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_dashboard_equivalenttobasecurrecy"/>

        <TextView
            android:id="@+id/textview_dashboard_ratecurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/marginend_dashboard_ratecurrency"
            android:text="VALUE"
            android:textAlignment="textStart"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_dashboard_equivalenttobasecurrecy"
            android:paddingBottom="4dp"
            />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearlayout_dahboard_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearlayout_dashboard_middletextviews"
        android:background="@color/porcelain"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linearlayout_dashboard_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/porcelain"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_dashboard_purchase"
                android:layout_width="@dimen/widthheight_dahboard_purchaseimageview"
                android:layout_height="@dimen/widthheight_dahboard_purchaseimageview"
                android:layout_marginStart="@dimen/marginstart_dashboard_purchaseimage"
                android:layout_weight="2"
                android:clickable="true"
                android:orientation="vertical"
                android:src="@drawable/dashboard_purchase"/>


            <ImageView
                android:id="@+id/imageview_dashboard_withdraw"
                android:layout_width="@dimen/widthheight_dashboard_withdrawimageview"
                android:layout_height="@dimen/widthheight_dashboard_withdrawimageview"
                android:layout_marginEnd="@dimen/marginend_dashboard_withdrawimage"
                android:layout_weight="2"
                android:src="@drawable/dashboard_withdraw"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
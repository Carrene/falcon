<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Porcelain">

    <RelativeLayout

        android:id="@+id/relativelayout_dashboard_firstpart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/mariner">

        <Spinner
            android:id="@+id/spinner_dashboard_spinner"
            style="@style/SpinnerTheme"
            android:layout_width="@dimen/width_dashboard_spinner"
            android:layout_height="@dimen/height_dashboard_spinner"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margintop_dashboard_spinner"
            android:textAlignment="center"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/textview_dashboard_myblance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margintop_Dashboard_myblance"
            android:text="@string/dashboard_myblance"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_dashboard_myblance" />

        <LinearLayout
            android:id="@+id/linearlayout_dashboard_alphasymbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_dashboard_myblance"
            android:layout_marginBottom="@dimen/marginbottom_dashboard_linearlayoutmiddletextview"
            android:layout_marginTop="@dimen/margintop_dashboard_linearlayoutalphasymbol"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/paddingbottom_dashboard_linearlayoutalphasymbol">

            <ImageView
                android:id="@+id/imageview_dasboard_alphaicon"
                android:layout_width="@dimen/widthheight_dashboard_alphaicon"
                android:layout_height="@dimen/widthheight_dashboard_alphaicon"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:paddingStart="@dimen/paddingstart_dashboard_alphaicon"
                android:src="@drawable/dashboard_alphasymbol"
                android:paddingBottom="@dimen/paddingbottom_dashboard_alphaicon"
                />

            <TextView
                android:id="@+id/textview_dashboard_balance"
                android:layout_width="wrap_content"
                android:layout_height="71dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:text="@string/dashboard_amountalpha"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_dashboard_amountalpha" />

        </LinearLayout>

        <View
            android:id="@+id/view_dashboard_borderline"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_dashboard_border"
            android:layout_below="@+id/linearlayout_dashboard_alphasymbol"
            android:layout_centerHorizontal="true"
            android:background="@color/Emerald" />

        <LinearLayout
            android:id="@+id/linearlayout_dashboard_middletextviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_dashboard_borderline"
            android:layout_marginBottom="@dimen/marginbottom_dashboard_linearlayoutmiddletextview"
            android:orientation="horizontal"
            android:paddingTop="@dimen/paddingtop_dashboard_linearlayoutmiddletextview">

            <TextView
                android:id="@+id/textview_dashboard_equivalenttobasecurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginstart_dashboard_equivalenttobasecurrency"
                android:layout_weight="1"
                android:text="@string/dasboard_equivalenttobasecurrency"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_dashboard_equivalenttobasecurrecy" />

            <ImageView
                android:id="@+id/imageview_dashboard_currencydollar"
                android:layout_width="@dimen/widthheight_dashboard_currencydollar"
                android:layout_height="@dimen/height_dashboard_imageviewcurrencydollar"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingStart="@dimen/paddingstart_dashboard_currenyicon"
                android:src="@drawable/dashboard_dollarsymbol" />

            <TextView
                android:id="@+id/textview_dashboard_ratecurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dahboard_rateequivalent"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_dashboard_equivalenttobasecurrecy" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearlayout_dahboard_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativelayout_dashboard_firstpart"
        android:background="@color/Porcelain"
        android:orientation="vertical">

        <View
            android:id="@+id/view_dashboard_secondborderline"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_dashboard_border"
            android:background="@color/Emerald" />

        <LinearLayout
            android:id="@+id/linearlayout_dashboard_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Porcelain"
            android:orientation="horizontal"
            android:paddingTop="@dimen/paddingtop_dashboard_bottomlinearlayout">

            <ImageView
                android:id="@+id/imageview_dashboard_purcahse"
                android:layout_width="@dimen/widthheight_dahboard_purchaseimageview"
                android:layout_height="@dimen/widthheight_dahboard_purchaseimageview"
                android:layout_marginStart="@dimen/marginstart_dashboard_purchaseimage"
                android:layout_weight="2"
                android:src="@drawable/dashboard_purchase" />

            <ImageView
                android:id="@+id/imageview_dashboard_withdraw"
                android:layout_width="@dimen/widthheight_dashboard_withdrawimageview"
                android:layout_height="@dimen/widthheight_dashboard_withdrawimageview"
                android:layout_marginEnd="@dimen/marginend_dashboard_withdrawimage"
                android:layout_weight="2"
                android:src="@drawable/dashboard_withdraw" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_dashboard_bottomtextviews"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_dashboard_linearlayoutbottomtextviews"
            android:layout_weight="2"
            android:background="@color/Porcelain"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/paddingend_dashboard_linearlayoutbottomtextviews"
            android:paddingStart="@dimen/paddingstart_dashboard_linearlayoutbottomtextviews"
            android:paddingTop="@dimen/paddingtop_dashboard_linearlayoutbottomtextviews">

            <TextView
                android:id="@+id/textview_dashboard_purchase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dashboard_purchase"
                android:textAlignment="center"
                android:textColor="@color/mariner"
                android:textSize="@dimen/textsize_dashboard_purchasewithdrawtextsize" />

            <TextView
                android:id="@+id/textview_dashboard_withdraw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dashboard_withdraw"
                android:textAlignment="center"
                android:textColor="@color/mariner"
                android:textSize="@dimen/textsize_dashboard_purchasewithdrawtextsize" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
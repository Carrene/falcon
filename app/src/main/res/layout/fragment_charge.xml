<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spinner_charge_customspinner"
        android:layout_width="@dimen/layoutwidth_charge_spinnerr"
        android:layout_height="@dimen/layoutheight_charge_spinnerr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margintop_charge_spinnerr"
        android:spinnerMode="dropdown" />

    <LinearLayout
        android:id="@+id/linearlayout_charge_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/spinner_charge_customspinner"
        android:layout_marginTop="@dimen/margintop_charge_linearlayout"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edittext_charge_amountwallet"
            android:layout_width="@dimen/layoutwidth_charge_edittextdolaramount"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/marginend_charge_edittextamount"
            android:hint="@string/charge_amount"
            android:inputType="numberDecimal"
            android:maxLength="10" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/charge_transfer"/>

        <EditText
            android:id="@+id/edittext_charge_amountbase"
            android:layout_width="@dimen/layoutwidth_charge_edittextdolaramount"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginstart_charge_edittextdollar"
            android:hint="@string/charge_dollar"
            android:inputType="numberDecimal"
            android:maxLength="10" />

    </LinearLayout>

    <Button
        android:id="@+id/button_charge_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout_charge_middle"
        android:layout_marginEnd="@dimen/marginendstart_charge_nextbutton"
        android:layout_marginStart="@dimen/marginendstart_charge_nextbutton"
        android:layout_marginTop="@dimen/margintop_charge_nextbutton"
        android:background="@color/greenHaze"
        android:text="@string/charge_next"
        android:textColor="@color/white" />

</RelativeLayout>
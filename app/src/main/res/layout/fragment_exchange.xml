<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/everywhere_ribbonheader"/>

    <LinearLayout
        android:id="@+id/linearlayout_exchange_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textinputlayout_exchange_firstamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.2">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textinput_exchange_sourceamount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:backgroundTint="@color/lineColor"
                android:inputType="numberDecimal"
                android:maxLength="6" />

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/imageview_exchange_exchangeicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="0.3"
            android:src="@drawable/everywhere_rowexchangelogo" />


        <TextView
            android:id="@+id/textview_exchange_exchangeto"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:drawableEnd="@drawable/everywhere_arrowright"
            android:lines="1"
            android:text="" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.2">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textinput_exchange_destinationamount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:backgroundTint="@color/lineColor"
                android:inputType="numberDecimal" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="128dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_exchange_walletsideunit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorRed"

            />

        <TextView
            android:id="@+id/textview_exchange_targetsideunit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorRed"/>
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margintop_rowaddresses_linearlayout">

        <TextView
            android:id="@+id/textview_addresses_walletnamelable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingStart="@dimen/marginstartend_rowaddresses_alltextview"
            android:text="@string/rowaddresses_walletname"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_rowaddresses_firstlinetextview" />

        <TextView
            android:id="@+id/textview_addresses_walletname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textview_addresses_walletnamelable"
            android:text="VALUE"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_rowaddresses_firstlinetextview" />

        <TextView
            android:id="@+id/textview_addresses_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingEnd="@dimen/marginstartend_rowaddresses_alltextview"
            android:text="VALUE"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_rowaddresses_firstlinetextview" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margintop_rowaddresses_linearlayout"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textview_addresses_dateandtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingStart="@dimen/marginstartend_rowaddresses_alltextview"
            android:text="VALUE"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_rowaddresses_secondlinetextview" />

        <ImageView
            android:id="@+id/imageview_addresses_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="48dp"
            android:layout_toStartOf="@+id/imageview_addresses_qrcode"
            android:paddingEnd="20dp"
            android:src="@drawable/addresses_share" />

        <ImageView
            android:id="@+id/imageview_addresses_qrcode"
            android:layout_width="33dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="19dp"
            android:layout_marginTop="5dp"
            android:paddingEnd="18dp"
            android:src="@drawable/addresses_qrcode" />

    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linearlayout_exchangefailed_forscreenshot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/marginstart_exchangefailed_linearlayout"
        android:layout_marginTop="@dimen/margintop_exchangefailed_linearlayout"
        android:layout_marginEnd="@dimen/marginend_exchangefailed_linearlayout"
        android:background="@drawable/everywherefailed_border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_exchangefailed_failed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_exchangefailed_textviewfailtitle"
            android:background="@drawable/chargefailed_headerborder"
            android:gravity="center"
            android:text="@string/text_exchangefailed_textviewfailtitle"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_exchangefailed_textviewfailtitle" />

        <TextView
            android:id="@+id/textview_exchangefailed_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginstart_exchangefailed_textviewfail"
            android:layout_marginTop="@dimen/margintop_exchangefailed_textviewfail"
            android:layout_marginEnd="@dimen/marginend_exchangefailed_textviewfail"
            android:layout_marginBottom="@dimen/marginbottom_exchangefailed_textviewfail"
            android:gravity="center"
            android:text="@string/text_exchangefailed_textviewfail"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_exchangefailed_textviewfail" />

    </LinearLayout>


    <Button
        android:id="@+id/button_exchangefailed_dashborad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/marginstart_exchangefailed_buttondashboard"
        android:layout_marginEnd="@dimen/marginend_exchangefailed_buttondashboard"
        android:layout_marginBottom="@dimen/marginbottom_exchangefailed_buttondashboard"
        android:background="@drawable/everywhere_borderbutton"
        android:backgroundTint="@color/colorSecondary"
        android:text="@string/text_exchangefailed_buttondashboard"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textsize_exchangefailed_buttondashboard" />

</RelativeLayout>
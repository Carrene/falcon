<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Porcelain"
    >

    <TextView
        android:id="@+id/textview_recoveryemail_enterrecoveryemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margintop_recoveryemail_header"
        android:text="@string/recoveryemail_enterarecoveryemail"
        android:textAlignment="center"
        android:textColor="@color/mariner"
        android:textSize="@dimen/textsize_recoveryemail_header" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textinputlayout_recoveryemail_enterrecoveryemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_recoveryemail_enterrecoveryemail"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/marginend_recoveryemail_textinputlayout"
        android:layout_marginStart="@dimen/marginstart_recoveryemail_textinputlayout"
        android:layout_marginTop="@dimen/margintop_recoveryemail_textinputlayout">

        <EditText
            android:id="@+id/edittext_recoveryemail_enterrecoveryemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:maxLength="30"
            android:hint="@string/recoveryemail_enteremailaddress"
            android:paddingBottom="@dimen/paddingbottom_recoveryemail_hintenteremail"
            android:gravity="center"
            />

    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/textview_recoveryemail_skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textinputlayout_recoveryemail_enterrecoveryemail"
        android:layout_marginTop="@dimen/margintop_recoveryemail_skip"
        android:text="@string/recoveryemail_skip"
        android:textAlignment="center"
        android:textColor="@color/Emerald"
        android:textSize="@dimen/textsize_authenticationdefinition_enterpasscode" />

</RelativeLayout>
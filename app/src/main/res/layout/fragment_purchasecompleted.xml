<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/linearlayout_purchasecompleted_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/marginstartend_purchasecompleted_linearlayout"
        android:layout_marginStart="@dimen/marginstartend_purchasecompleted_linearlayout"
        android:layout_marginTop="@dimen/margintop_purchasecompleted_linearlayout"
        android:background="@drawable/chargeandtransferandpurchasecompleted_border"
        android:orientation="vertical"
        android:paddingBottom="@dimen/paddingbottom_purchasecompleted_linearlayout">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_purchasecompleted_header"
            android:background="@drawable/chargetransfercompleted_headerborder">

            <TextView
                android:id="@+id/textview_purchasecompleted_success"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_purchasecompleted_header"
                android:gravity="center"
                android:text="@string/purchasecompleted_success"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_purchasecompleted_successtextview" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margintop_purchasecompleted_relativelayoutheader"
            android:paddingStart="@dimen/paddingstart_purchasecompleted_relativelayout">

            <TextView
                android:id="@+id/textview_purchasecompleted_purchaseamountlable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/purchasecompleted_paidamount"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_purchasecompleted_paidamountlable" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_purchasecompleted_purchaseamountalpha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/paddingend_purchasecompleted_textview"
                    android:text="VALUE"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_purchasecompleted_paidamountlable" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_purchasecompleted_view"
            android:layout_marginBottom="@dimen/margintopbottom_purchasecompleted_view"
            android:layout_marginTop="@dimen/margintopbottom_purchasecompleted_view"
            android:background="@color/colorPrimaryDark5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margintop_purchasecompleted_relativelayout"
            android:paddingStart="@dimen/paddingstart_purchasecompleted_relativelayout">

            <TextView
                android:id="@+id/textview_purchasecompleted_paidamountlable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/purchasecompleted_baseamount"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_purchasecompleted_amountdollarlable" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_purchasecompleted_paidamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/paddingend_purchasecompleted_textview"
                    android:text="VALUE"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_purchasecompleted_amountdollarlable" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_purchasecompleted_view"
            android:layout_marginBottom="@dimen/margintopbottom_purchasecompleted_view"
            android:layout_marginTop="@dimen/margintopbottom_purchasecompleted_view"
            android:background="@color/colorPrimaryDark5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margintop_purchasecompleted_relativelayout"
            android:paddingStart="@dimen/paddingstart_chargecompleted_relativelayout">

            <TextView
                android:id="@+id/textview_purchasecompleted_transactiondatelable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/purchasecompleted_transactiondate"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_purchasecompleted_transactiondate" />

            <TextView
                android:id="@+id/textview_purchasecompleted_transactiondate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingEnd="@dimen/paddingend_purchasecompleted_textview"
                android:text="VALUE"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_purchasecompleted_transactiondate" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_purchasecompleted_view"
            android:layout_marginBottom="@dimen/margintopbottom_purchasecompleted_view"
            android:layout_marginTop="@dimen/margintopbottom_purchasecompleted_view"
            android:background="@color/colorPrimaryDark5" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margintop_purchasecompleted_relativelayout"
            android:paddingStart="@dimen/paddingstart_purchasecompleted_relativelayout">

            <TextView
                android:id="@+id/textview_purchasecompleted_transactiontimelable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/purchasecompleted_transactiontime"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_purchasecompleted_transactiondate" />

            <TextView
                android:id="@+id/textview_purchasecompleted_transactiontime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingEnd="@dimen/paddingend_purchasecompleted_textview"
                android:text="VALUE"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_purchasecompleted_transactiondate" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_purchasecompleted_view"
            android:layout_marginBottom="@dimen/margintopbottom_purchasecompleted_view"
            android:layout_marginTop="@dimen/margintopbottom_purchasecompleted_view"
            android:background="@color/colorPrimaryDark5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margintop_purchasecompleted_relativelayout"
            android:paddingStart="@dimen/paddingstart_purchasecompleted_relativelayout">

            <TextView
                android:id="@+id/textview_purchasecompleted_rrnlable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/purchasecompleted_trackingcode"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_purchasecompleted_trackingcode" />

            <TextView
                android:id="@+id/textview_purchasecompleted_rrn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingEnd="@dimen/paddingend_purchasecompleted_textview"
                android:text="VALUE"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_purchasecompleted_trackingcode" />
        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/button_purchasecompleted_purchaseagain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_above="@+id/button_purchasecompleted_dashborad"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/marginbuttom_purchasecompleted_purchaseagain"
        android:layout_marginEnd="@dimen/marginstartend_purchasecompleted_purchaseagain"
        android:layout_marginStart="@dimen/marginstartend_purchasecompleted_purchaseagain"
        android:background="@color/colorSecondary"
        android:text="@string/purchasecompleted_purchaseagain"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textsize_purchasecompleted_confirmbutton" />

    <Button
        android:id="@+id/button_purchasecompleted_dashborad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/marginbuttom_purchasecompleted_confirm"
        android:layout_marginEnd="@dimen/marginstartend_purchasecompleted_confirm"
        android:layout_marginStart="@dimen/marginstartend_purchasecompleted_confirm"
        android:background="@drawable/everywhere_borderbutton"
        android:text="@string/purchasecompleted_dashboard"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textsize_purchasecompleted_confirmbutton" />
</RelativeLayout>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarlayout_setting_appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_setting_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_setting_expandedtoolbar"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:id="@+id/framelayout_setting_fragmentcontainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar_setting_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ToolbarTheme"
        app:layout_anchor="@id/collapsing_setting_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleimageview_setting_profilepicture"
        android:layout_width="@dimen/widthheight_setting_circleimageview"
        android:layout_height="@dimen/widthheight_setting_circleimageview"
        android:layout_marginStart="@dimen/marginstart_setting_circleimageview"
        android:layout_marginTop="@dimen/margintop_setting_circleimageview"
        android:src="@drawable/navigationheader_profile"
        app:finalHeight="@dimen/height_setting_circleimagefinalheight"
        app:finalToolbarHeight="?attr/actionBarSize"
        app:finalXPosition="@dimen/position_setting_finalxposition"
        app:finalYPosition="@dimen/position_setting_finalyposition"
        app:layout_behavior="de.netalic.falcon.ui.setting.AvatarImageBehavior" />

    <LinearLayout
        android:id="@+id/linearlayout_setting_phonenumberandemailparent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_setting_linearlayoutofphonenumberandemailparent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margintop_setting_linearlayoutofphonenumberandemailparent"
        android:orientation="vertical"
        android:paddingStart="@dimen/marginstart_setting_linearlayoutofphonenumberandemailparent"
        app:finalHeight="@dimen/finalheight_setting_linearlayoutofphonenumberandemailparent"
        app:finalToolbarHeight="?attr/actionBarSize"
        app:finalXPosition="@dimen/finalxposition_setting_linearlayoutofphonenumberandemailparent"
        app:finalYPosition="@dimen/finalyposition_setting_linearlayoutofphonenumberandemailparent"
        app:layout_behavior="de.netalic.falcon.ui.setting.TextBehavior">

        <TextView
            android:id="@+id/textview_setting_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PHONENUMBERVALUE"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textview_setting_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMAILVALUE"
            android:textColor="@color/white"/>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margintop_authenticationdefinition_header"
        android:text="@string/athenticationdefinition_selecttheappsloginmethod"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_authenticationdefinition_header" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_authentication_definition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <de.netalic.falcon.util.NonSwipeAbleViewPager
        android:id="@+id/viewpager_authentication_definition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</LinearLayout>
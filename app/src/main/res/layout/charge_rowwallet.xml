<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativelayout_charge_wallet"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/charge_wallet_border">

        <TextView
            android:id="@+id/textview_charge_paymentgateway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Value"
            android:textColor="@color/colorPrimaryDark"/>

        <ImageView
            android:id="@+id/textview_charge_walletcurrency"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/textview_charge_paymentgateway"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/charge_alphasymbol"
            />

        <TextView
            android:id="@+id/textView_charge_walletbalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="Value"
            android:textColor="@color/colorPrimaryDark"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageview_charge_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:src="@drawable/charge_checked"/>
</RelativeLayout>
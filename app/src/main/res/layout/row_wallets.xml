<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_rowwallets_linearlayout"
    android:layout_height="@dimen/height_rowwallets_linearlayout"
    android:layout_gravity="start"
    android:layout_marginLeft="@dimen/marginleft_rowwallets_linearlayout"
    android:layout_marginTop="@dimen/margintop_rowwallets_linearlayout"
    android:layout_marginRight="@dimen/marginright_rowwallets_linearlayout"
    android:layout_marginBottom="@dimen/marginbottom_rowwallets_linearlayout"
    android:background="@drawable/dashboard_walletbackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginleft_rowwallets_textviewwalletname"
        android:layout_marginTop="@dimen/margintop_rowwallets_textviewwalletname">

        <TextView
            android:id="@+id/textview_dashboard_walletname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_rowwallets_textviewwalletname"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/textsize_rowwallets_textviewwalletname" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_rowwallets_linearlayoutcenter"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_dashboard_walletcurrencysymbol"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_rowwallets_textviewwalletcurrencysymbol"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_rowwallets_textviewwalletcurrencysymbol" />

        <TextView
            android:id="@+id/textview_dashboard_walletbalance"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_rowwallets_textviewwalletbalance"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_rowwallets_textviewwalletbalance" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_rowwallets_linearlayoutbottom"
        android:layout_marginRight="@dimen/marginright_rowwallets_linearlayoutbottom"
        android:layout_marginBottom="@dimen/marginbottom_rowwallets_linearlayoutbottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/width_rowwallets_linearlayoutwalletaddress"
            android:layout_height="@dimen/height_rowwallets_linearlayoutwalletaddress"
            android:layout_gravity="bottom|start"
            android:background="@color/colorSecondary">

            <TextView
                android:id="@+id/textview_dashboard_walletaddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textColor="@color/primary_dark"
                android:textSize="@dimen/textsize_rowwallets_textviewwalletaddress" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageview_dashboard_qrcode"
            android:layout_width="@dimen/width_rowwallets_imageviewqrcode"
            android:layout_height="@dimen/height_rowwallets_imageviewqrcode"
            android:layout_gravity="top"
            android:layout_marginLeft="@dimen/marginleft_rowwallets_imageviewqrcode"
            android:scaleType="fitXY" />
    </LinearLayout>
</LinearLayout>

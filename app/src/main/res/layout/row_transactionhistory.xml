<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margintop_rowtransactionhistory_linearlayout">

        <TextView
            android:id="@+id/textview_rowtransactionhistory_walletname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingStart="@dimen/marginstartend_rowtransactionhistory_alltextview"
            android:text="VALUE"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_rowtransactionhistory_firstlinetextview" />

        <TextView
            android:id="@+id/textview_rowtransactionhistory_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textview_rowtransactionhistory_walletname"
            android:text="@string/text_rowtransactionhistory_textviewdivider"
            android:textSize="@dimen/textsize_rowtransactionhistory_firstlinetextview" />

        <TextView
            android:id="@+id/textview_transactionhistory_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textview_rowtransactionhistory_divider"
            android:text="VALUE"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_rowtransactionhistory_firstlinetextview" />

        <TextView
            android:id="@+id/textview_transactionhistory_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingEnd="@dimen/marginstartend_rowtransactionhistory_alltextview"
            android:text="VALUE"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_rowtransactionhistory_firstlinetextview" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margintop_rowtransactionhistory_relativelayout"
        android:layout_marginBottom="@dimen/margintop_rowtransactionhistory_linearlayout">

        <TextView
            android:id="@+id/textview_transactionhistory_dateandtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingStart="@dimen/marginstartend_rowtransactionhistory_alltextview"
            android:text="VALUE"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_rowtransactionhistory_secondlinetextview" />

        <TextView
            android:id="@+id/textview_transactionhistory_transactionresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/marginstartend_rowtransactionhistory_alltextview"
            android:text="VALUE"
            android:textSize="@dimen/textsize_rowtransactionhistory_secondlinetextview" />
    </RelativeLayout>


</LinearLayout>
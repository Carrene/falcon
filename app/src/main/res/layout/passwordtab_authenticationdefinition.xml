<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textview_authenticationdefinition_enterpasscode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginstart_authenticationdefinition_enterpasscode"
        android:paddingTop="@dimen/paddingtop_authentictiondefinition_enterpasscode"
        android:text="@string/authenticationdefinition_Enterpassword"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_authenticationdefinition_enterpasscode" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textinputlayout_authenticationdefinition_enterpasscode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_authenticationdefinition_enterpasscode"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/marginend_authenticationdefinition_textinputlayout"
        android:layout_marginStart="@dimen/marginstart_authenticationdefinition_textinputlayout"
        >

        <EditText
            android:id="@+id/edittext_authentication_entercode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:maxLength="16"
            />

    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/textview_authenticationdefinition_confirmpasscode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textinputlayout_authenticationdefinition_enterpasscode"
        android:layout_marginStart="@dimen/marginstart_authenticationdefinition_enterpasscode"
        android:layout_marginTop="@dimen/margintop_authenticationdefinition_confirmpassword"
        android:text="@string/authenticationdefinition_Confirmpassword"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_authenticationdefinition_enterpasscode" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textinputlayout_authenticationdefinition_confirmpasscode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_authenticationdefinition_confirmpasscode"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/marginend_authentication_textinputlayout"
        android:layout_marginStart="@dimen/marginstart_authentication_textinputlayout">

        <EditText
            android:id="@+id/edittext_authenticationdefinition_confirmcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:maxLength="16" />

    </android.support.design.widget.TextInputLayout>

</RelativeLayout>
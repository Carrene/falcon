<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondaryDark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="SplashTheme" parent="BaseAppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="TextAppearanceBase" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="TextAppearanceHead" parent="TextAppearanceBase">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearanceHelper" parent="TextAppearanceBase">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="TextInputLayoutOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="android:textColorHint">@color/colorText</item>
        <item name="hintTextAppearance">@style/TextAppearanceBase</item>
        <item name="helperTextTextAppearance">@style/TextAppearanceHelper</item>
        <item name="counterTextAppearance">@style/TextAppearanceBase</item>
    </style>


    <style name="HintTextStyle" parent="TextAppearance.Design.Hint">
        <item name="android:background">@color/mtrl_textinput_default_box_stroke_color</item>
    </style>

    <style name="RadioButtonTheme">
        <item name="android:textColor">@drawable/authenticationpasswordtab_buttontextcolor</item>
        <item name="android:minHeight">@dimen/minheight_style_radiobutton</item>
        <item name="android:minWidth">@dimen/minwidth_style_radiobutton</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">@dimen/paddingleft_style_radiobutton</item>
        <item name="android:paddingRight">@dimen/paddingright_style_radiobutton</item>
        <item name="android:textColorTertiary">@color/colorText</item>
    </style>

    <style name="SpinnerThemeDashboard" parent="android:Widget.Holo.Spinner">
        <item name="android:background">@drawable/dashboard_backgroundspinner</item>
    </style>

    <style name="SpinnerThemeWithdrawAndTransferAndPurchase" parent="android:Widget.Holo.Spinner">
        <item name="android:background">@drawable/withdrawtransfer_backgroundspinner</item>
    </style>

    <style name="SpinnerThemeWithdrawAmount" parent="android:Widget.Holo.Spinner">
        <item name="android:background">@drawable/withdrawamount_backgroundspinner</item>
    </style>

    <style name="SpinnerListCurrencyCommon" parent="android:Widget.Holo.Spinner">

        <item name="android:background">@drawable/common_listcurrencybackgroundspinner</item>
    </style>

    <style name="BaseAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="BaseAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>



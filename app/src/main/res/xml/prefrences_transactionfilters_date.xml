<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Status">
        <SwitchPreference
            android:key="success"
            android:title="Success"/>
        <SwitchPreference
            android:key="Fail"
            android:title="Failed"/>
    </PreferenceCategory>
    <PreferenceCategory android:layout="@layout/divider_preference"/>
    <PreferenceCategory android:title="Transaction Type">

        <SwitchPreference
            android:key="Withdraw"
            android:title="Withdraw"/>
        <SwitchPreference
            android:key="Charge"
            android:title="Charge"/>
        <SwitchPreference
            android:key="Receive"
            android:title="Receive"/>
        <SwitchPreference
            android:key="Purchase"
            android:title="Purchase"/>

    </PreferenceCategory>
    <PreferenceCategory android:layout="@layout/divider_preference"/>

    <PreferenceCategory android:title="Date">

        <ListPreference
            android:entries="@array/transactionfilter_date"
            android:entryValues="@array/transactionfilter_date"
            android:summary="Always"
            android:key="date"
            android:title="Choose time"/>
    </PreferenceCategory>
</PreferenceScreen>
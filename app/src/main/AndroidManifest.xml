<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.netalic.falcon">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".MyApp"
        android:allowBackup="false"
        android:icon="@drawable/icon_alpha"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_alpha"
        android:supportsRtl="true"
        android:theme="@style/BaseAppTheme"
        tools:replace="android:allowBackup">
        <provider
            android:name=".util.GenericFileProvider"
            android:authorities="de.netalic.falcon.debug.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name=".ui.authentication.registration.RegistrationActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.authentication.phoneconfirmation.PhoneConfirmationActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.authentication.registration.RegistrationActivity"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.authentication.registration.RegistrationActivity" />
        </activity>
        <activity
            android:name=".ui.authentication.authnticationdefinition.AuthenticationDefinitionActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.authentication.recoveryemail.RecoveryEmailActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.authentication.phoneconfirmation.PhoneConfirmationActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.dashboard.DashboardActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.charge.ChargeAmountActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.charge.ChargeActivity"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.charge.ChargeActivity" />
        </activity>
        <activity android:name=".ui.charge.ChargeActivity" />
        <activity android:name=".ui.charge.ChargeCompletedActivity" />
        <activity
            android:name=".ui.charge.ChargeConfirmationActivity"
            android:parentActivityName=".ui.charge.ChargeAmountActivity"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.charge.ChargeAmountActivity" />
        </activity>
        <activity android:name=".ui.charge.ChargeFailedActivity" />
        <activity android:name=".ui.withdraw.WithdrawActivity" />
        <activity
            android:name=".ui.withdraw.WithdrawAmountActivity"
            android:parentActivityName=".ui.withdraw.WithdrawActivity" />
        <activity android:name=".ui.withdraw.WithdrawQrCompletedActivity" />
        <activity android:name=".ui.withdraw.WithdrawQrFailedActivity" />
        <activity android:name=".ui.transaction.transactionhistory.TransactionHistoryActivity" />
        <activity
            android:name=".ui.transaction.transactionhistoryfilters.TransactionHistoryFiltersActivity"
            android:parentActivityName=".ui.transaction.transactionhistory.TransactionHistoryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.transaction.transactionhistory.TransactionHistoryActivity" />
        </activity>
        <activity android:name=".ui.transfer.TransferActivity" />
        <activity
            android:name=".ui.transfer.TransferAmountActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.transfer.TransferActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.transfer.TransferAmountActivity" />
        </activity>
        <activity
            android:name=".ui.transfer.TransferPayeeActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.transfer.TransferAmountActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.transfer.TransferPayeeActivity" />
        </activity>
        <activity
            android:name=".ui.transfer.TransferConfirmationActivity"
            android:parentActivityName=".ui.transfer.TransferPayeeActivity" />
        <activity android:name=".ui.transfer.TransferCompletedActivity" />
        <activity android:name=".ui.transfer.TransferFailedActivity" />
        <activity android:name=".ui.addresses.AddressesActivity" />
        <activity android:name=".ui.addresses.QrCodeAddressesActivity"
            android:parentActivityName=".ui.addresses.AddressesActivity" />
    </application>

</manifest>